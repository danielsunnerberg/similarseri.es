<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Similarseri.es</title>
    <link rel="icon" href="{{ asset('/favicon.ico') }}">
    {% block stylesheets %}
        {% stylesheets filter='cssrewrite'
            'assets/vendor/bootstrap/less/bootstrap.less'
            'assets/vendor/ladda-bootstrap/dist/ladda-themeless.min.css'
            'assets/vendor/bootstrap-material-design/dist/css/material-fullpalette.min.css'
            'assets/vendor/bootstrap-material-design/dist/css/ripples.min.css'
            '@SunnerbergSimilarSeriesBundle/Resources/public/css/base.less'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

<nav class="navbar navbar-material-light-blue-700">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Similarseri.es</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                {% if app.user %}
                    <li><a href="{{ path('logout') }}">Logout</a></li>
                {% else %}
                    <li>
                        <a href="{{ path('login_route') }}"><i class="mdi-social-person align-bottom"></i> LOGIN</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div class="container page">
    {% block body %}{% endblock %}
</div>


{% block javascripts %}
    <script src="{{ asset('assets/vendor/requirejs/require.js') }}" data-main="{{ asset('bundles/sunnerbergsimilarseries/js/main.js') }}"></script>
{% endblock %}
</body>
</html>
