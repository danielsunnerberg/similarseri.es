<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="By analyzing what shows you've previously enjoyed, we predict what shows you'd like to watch next">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link rel="manifest" href="/manifest.json">
    <meta name="apple-mobile-web-app-title" content="Similarseri.es">
    <meta name="application-name" content="Similarseri.es">
    <meta name="msapplication-TileColor" content="#000000">
    <meta name="theme-color" content="#000000">

    {% block icons %}
        {% include '@SunnerbergSimilarSeries/Helper/icons.html.twig' %}
    {% endblock %}

    <title>
        {% block title %}
            Find series that you will like
        {% endblock %}
        - Similarseri.es
    </title>
    {% block stylesheets %}
        {% stylesheets filter='cssrewrite,?uglifycss'
            'assets/vendor/bootstrap/less/bootstrap.less'
            'assets/vendor/ladda-bootstrap/dist/ladda-themeless.min.css'
            'assets/vendor/bootstrap-material-design/dist/css/material.min.css'
            'assets/vendor/bootstrap-material-design/dist/css/ripples.min.css'
            '@SunnerbergSimilarSeriesBundle/Resources/public/css/base.less'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    {% block body %}
        <nav class="navbar top-navbar">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#" class="pull-left"></a>

                    <a class="navbar-brand" href="{{ path('start') }}">
                        <img src="{{ asset('bundles/sunnerbergsimilarseries/images/transparent-icon-36x36.png') }}" class="img-responsive" />
                        Similarseri.es
                    </a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.user %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ app.user.getPrettyUsername }} <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('logout') }}">LOGOUT</a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{ path('login_route') }}"><i class="mdi-social-person align-bottom"></i> LOGIN</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container page">
            {% block content %}{% endblock %}
        </div>

        {% block javascripts %}
            <script src="{{ asset('assets/vendor/requirejs/require.js') }}" data-main="{{ asset('bundles/sunnerbergsimilarseries/js/main.js') }}"></script>
        {% endblock %}

        {% block google_analytics %}
            {% include '@SunnerbergSimilarSeries/Helper/google_analytics.html.twig' %}
        {% endblock %}

    {% endblock %}
</body>
</html>
