{% extends '@SunnerbergSimilarSeries/base.html.twig' %}

{% block stylesheets %}
    {% stylesheets '@SunnerbergSimilarSeriesBundle/Resources/public/css/typeahead.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">Add TV-shows that you've enjoyed to get personalised suggestions</div>
        <div class="panel-body panel-default">
            <input id="show-search" class="typeahead form-control" type="text" placeholder="Find shows">
        </div>
    </div>

    <div id="suggestions">
        <h2 id="user-suggestions-title"></h2>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/vendor/requirejs/require.js') }}" data-main="{{ asset('bundles/sunnerbergsimilarseries/js/main.js') }}"></script>
{% endblock %}
